<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Evendo V3</title>
    <meta name="description" content="">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,500" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/style.css">


    <!-- jQuery only for demo purpose  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


</head>

<body>

    <!-- @include sidebar.kit -->







    <!-- @include header.kit -->





    <main id="content" class="fp account">

        <div class="widthmedium">


            <section class="fpsec">
                <h2>Personal Information</h2>

                <ul class="forms">
                    <li>
                        <ul class="three">
                            <li>
                                <label>Name *</label>
                                <input type="number">
                            </li>
                            <li>
                                <label>Surname *</label>
                                <input type="text">
                            </li>
                            <li>
                                <label>Mail *</label>
                                <input type="email">
                            </li>
                        </ul>
                    </li>



                </ul>
            </section>



            <section class="fpsec">
                <h2>Location</h2>

                <ul class="forms">
                    <li>
                        <ul class="three">
                            <li>
                                <label>Phone *</label>
                                <input type="number">
                            </li>
                            <li>
                                <label>Address *</label>
                                <input type="text">
                            </li>
                            <li>
                                <label>City *</label>
                                <input type="email">
                            </li>
                        </ul>
                    </li>
                    <li>
                        <ul class="three">
                            <li>
                                <label>Zip</label>
                                <input type="number">
                            </li>
                            <li>
                                <label>Country *</label>
                                <select>
                                    <option selected>Choose...</option>
                                    <option>Option 1</option>
                                    <option>Option 2</option>
                                    <option>option 3</option>
                                </select>
                            </li>
                            <li></li>
                        </ul>
                    </li>

                </ul>

                <div class="terms">
                    <form class="checkbox">
                        <input type="checkbox">
                        <label>Jeg accepterer at modtage markedsføring og salgs information fra Evendo</label>
                    </form>

                    <form class="checkbox">
                        <input type="checkbox">
                        <label>Jeg accepterer at modtage markedsføring og salgs information fra Evendo samarbejdspartnere og leverandører.</label>
                    </form>
                    <form class="checkbox">
                        <input type="checkbox">
                        <label>I have read and accepted Evendo
                            <a href="#">Terms and Conditions</a>
                        </label>
                    </form>
                </div>

                <ul class="forms">
                    <li>
                        <ul class="three">
                            <li>
                                <button class="btn btn-primary btn-full">Save changes</button>
                            </li>
                            <li></li>
                            <li></li>
                        </ul>


            </section>









            <section class="fpsec">
                <h2>Change password</h2>

                <ul class="forms">
                    <li>
                        <ul class="three">
                            <li>
                                <label>Current password</label>
                                <input type="number">
                            </li>
                            <li>
                                <label>New Password</label>
                                <input type="number">
                            </li>
                            <li>
                                <label>Retype Password</label>
                                <input type="number">
                            </li>
                        </ul>
                    </li>

                </ul>
                <ul class="forms">
                        <li>
                            <ul class="three">
                                <li>
                                    <button class="btn btn-primary btn-full">Save new password</button>
                                </li>
                                <li></li>
                                <li></li>
                            </ul>
            </section>


        </div>
    </main>



</body>







</html>